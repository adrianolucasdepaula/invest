{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp@latest"],
      "env": {},
      "alwaysAllow": ["*"]
    },
    "chrome-devtools": {
      "command": "cmd",
      "args": ["/c", "npx", "-y", "chrome-devtools-mcp@latest"],
      "env": {},
      "alwaysAllow": ["*"]
    },
    "a11y": {
      "command": "cmd",
      "args": ["/c", "npx", "-y", "a11y-mcp-server"],
      "env": {},
      "alwaysAllow": ["*"]
    },
    "context7": {
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@upstash/context7-mcp"],
      "env": {},
      "alwaysAllow": ["*"]
    },
    "sequential-thinking": {
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@modelcontextprotocol/server-sequential-thinking"],
      "env": {},
      "alwaysAllow": ["*"]
    },
    "react-context": {
      "command": "cmd",
      "args": ["/c", "npx", "-y", "react-context-mcp@latest", "--headless", "--isolated"],
      "env": {},
      "alwaysAllow": ["*"]
    }
  }
}
