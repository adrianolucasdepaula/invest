# Environment
NODE_ENV=development

# Server
APP_PORT=3101
PORT=3101

# Database PostgreSQL
DB_HOST=localhost
DB_PORT=5532
DB_USERNAME=invest_user
DB_PASSWORD=invest_password
DB_DATABASE=invest_db
DB_SYNCHRONIZE=false
DB_LOGGING=true

# Redis
REDIS_HOST=localhost
REDIS_PORT=6479
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=change_this_in_production_min_32_chars_super_secret_key_2024
JWT_EXPIRATION=7d

# Google OAuth (opcional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3101/api/v1/auth/google/callback

# OpenAI (opcional)
OPENAI_API_KEY=

# Telegram Bot (opcional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Scrapers
SCRAPER_HEADLESS=true
SCRAPER_CONCURRENT_JOBS=3
SCRAPER_RETRY_ATTEMPTS=3
SCRAPER_TIMEOUT=30000

# Cache
CACHE_TTL=300

# Queue
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379

# Logs
LOG_LEVEL=debug

# CORS - Comma-separated list of allowed origins
# Examples:
#   Development: http://localhost:3100,http://localhost:3000
#   Production: https://yourdomain.com,https://www.yourdomain.com
#   Allow all (NOT RECOMMENDED): *
CORS_ORIGIN=http://localhost:3100,http://localhost:3000

# Frontend URL (para redirects do OAuth)
FRONTEND_URL=http://localhost:3100

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
