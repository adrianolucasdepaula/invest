#!/bin/sh
# Commit-msg hook for B3 AI Analysis Platform
# Validates: Conventional Commits format

# Get commit message
COMMIT_MSG_FILE=$1
COMMIT_MSG=$(cat "$COMMIT_MSG_FILE")

echo "üìù Validating commit message..."

# Conventional Commits pattern
# Types: feat, fix, docs, style, refactor, perf, test, build, ci, chore, revert
PATTERN="^(feat|fix|docs|style|refactor|perf|test|build|ci|chore|revert)(\(.+\))?: .{3,}"

# Check if message matches pattern
if ! echo "$COMMIT_MSG" | head -1 | grep -qE "$PATTERN"; then
    echo ""
    echo "‚ùå Invalid commit message format!"
    echo ""
    echo "Expected format: <type>(<scope>): <description>"
    echo ""
    echo "Types: feat, fix, docs, style, refactor, perf, test, build, ci, chore, revert"
    echo ""
    echo "Examples:"
    echo "  feat: add new feature"
    echo "  fix(auth): resolve login issue"
    echo "  docs: update README"
    echo "  chore(deps): update dependencies"
    echo ""
    echo "Your message: $COMMIT_MSG"
    echo ""
    echo "To bypass (emergency only): git commit --no-verify"
    exit 1
fi

# Check minimum length (excluding type)
MSG_LENGTH=$(echo "$COMMIT_MSG" | head -1 | wc -c)
if [ "$MSG_LENGTH" -lt 15 ]; then
    echo ""
    echo "‚ùå Commit message too short!"
    echo "Minimum length: 15 characters"
    echo "Your message: $COMMIT_MSG (${MSG_LENGTH} chars)"
    exit 1
fi

echo "‚úÖ Commit message valid"
